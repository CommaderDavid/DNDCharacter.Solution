@{
    Layout = "_Layout";
}

@using DNDCharacter.Models;
@model List<DNDCharacter.Models.Character>;

<h1>Characters</h1>

@if (@Model.Count == 0)
{
    <h3>No characters have been added yet!</h3>
}

@foreach (Character character in Model)
{
    <li>@Html.ActionLink($"{character.CharacterName}", "Details", new { id = character.CharacterId})</li>
}

<p>@Html.ActionLink("Add new character", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>