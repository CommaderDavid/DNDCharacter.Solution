@{
    Layout = "CharacterLayout";
}

@using DNDCharacter.Models;
@model List<DNDCharacter.Models.Character>;

<h1>Characters</h1>

@if (@Model.Count == 0)
{
    <h3>No characters have been added yet!</h3>
}

@foreach (Character character in Model)
{
    <li>@Html.ActionLink($"{character.CharacterName}", "Details", new { id = character.CharacterId}, new { @class =
            "character" })</li>
}

<h4>@Html.ActionLink("Add new character", "Create", null, new { @class = "character" })</h4>
<h4>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "home" })</h4>