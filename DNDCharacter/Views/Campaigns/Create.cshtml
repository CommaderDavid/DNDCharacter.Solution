@{
    Layout = "CampaignLayout";
}

@model DNDCharacter.Models.Campaign;

<h1>Add a new Campaign</h1>

@using (Html.BeginForm())
{
    @Html.Label("Name","Campaign Name:", new {@class = "label"})
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.Label("Setting","Campaign Setting:", new {@class = "label"})
    @Html.TextBoxFor(model => model.Setting)
    <br>
    @Html.Label("Rule", "Campaign Rule Set:", new {@class = "label"})
    @Html.TextBoxFor(model => model.Rulebook)
    <br>
    <input type="submit" value="Add new campaign" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all campaigns", "Index", "Campaigns", null, new { @class = "campaign"})</p>