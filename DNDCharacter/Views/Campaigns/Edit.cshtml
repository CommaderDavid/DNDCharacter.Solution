@{
    Layout = "_Layout";
}

@model DNDCharacter.Models.Campaign

<h2>Edit</h2>

<h4>Edit this campaign: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CampaignId)

    @Html.Label("Campaign Name:")
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.Label("Campaign Settings:")
    @Html.EditorFor(model => model.Setting)
    <br>
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>